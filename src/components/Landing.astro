---
import logo from "../images/logo.svg";
import desktop from "../images/desktop.jpg";
---

<main>
  <section class="container">
    <header>
      <div class="logo">
        <img src={logo} alt="" />
      </div>

      <nav>
        <ul>
          <li><a href="#">How we work</a></li>
          <li><a href="#">Blog</a></li>
          <li><a href="#">Account</a></li>
          <li><a href="#" class="btn">View plans</a></li>
        </ul>
      </nav>
      <div class="toggler"></div>
    </header>
  </section>

  <section class="landing">
    <div class="container">
      <div class="flex flex-reverse">
        <div class="landing-text">
          <div class="line"></div>
          <h2>Humanizing <br /> your insurance.</h2>
          <p>
            Get your life insurance coverage easier and faster. We blend our
            expertise and technology to help you find the plan thatâ€™s right for
            you. Ensure you and your loved ones are protected.
          </p>
          <a href="#" class="btn dark">View plans</a>
        </div>

        <div class="landing-img">
          <img src={desktop} alt="" />
        </div>
      </div>
    </div>
  </section>
</main>
<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px;
    padding-top: 20px;
    position: relative;
  }

  header .logo {
    width: 7rem;
  }

  header .logo img {
    width: 100%;
  }

  nav ul {
    display: flex;
    align-items: center;
    justify-content: space-between;
    column-gap: 1rem;
  }

  nav ul li {
    margin: 0 0.5rem;
  }

  nav ul li a {
    color: var(--VeryDarkViolet);
  }

  nav ul li a:hover {
    color: var(--DarkViolet);
  }

  .landing {
    margin-top: 2rem;
    background-color: var(--DarkViolet);
    padding: 20px 0;
  }

  .landing .landing-text {
    width: 35rem;
  }
  .landing .landing-img {
    width: 25rem;
    transform: translate(-60px, 70px);
  }

  .landing .landing-img img {
    width: 100%;
  }
  .landing .landing-text {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 30px;
    flex-direction: column;
  }
  .landing .landing-text .line {
    background-color: #fff;
  }

  .landing .btn {
    background-color: transparent;
    color: #fff;
  }
  .landing .btn:hover {
    background-color: #fff;
    color: var(--DarkViolet);
  }

  .landing .landing-text h2,
  .landing .landing-text p {
    color: #fff;
    width: 100%;
  }

  .landing .landing-text h2 {
    font-size: 3rem;
    padding-right: 1rem;
    line-height: 1em;
  }

  .toggler {
    display: none;
  }

  @media (max-width: 1024px) {
    .landing .landing-text {
      width: 35rem;
    }
    .landing .landing-img {
      width: 25rem;
      transform: translate(0px, 70px);
    }
  }

  @media (max-width: 768px) {
    .landing {
      padding: 0;
      padding-bottom: 3rem;
    }

    .landing .landing-text {
      align-items: center;
      text-align: center;
      width: 100%;
    }

    .landing .landing-text h2 {
      font-size: 2.6rem;
      font-weight: 500;
    }
    .landing .landing-img {
      width: 100%;
      text-align: center;
    }

    .landing .landing-img {
      width: 100%;
      transform: translate(0, 0);
    }

    nav {
      position: absolute;
      top: 4.4rem;
      left: -100vw;
      right: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--VeryDarkViolet);
      z-index: 100;
    }

    nav ul {
      flex-direction: column;
      justify-content: center;
      margin-top: 30px;
    }

    nav ul li {
      margin: 20px 0;
    }

    nav ul li a {
      font-size: 30px;
      color: #fff;
      font-weight: 500;
    }

    nav ul li a.btn {
      background-color: transparent;
      width: 100%;
      display: block;
    }

    .toggler {
      display: block;
      position: absolute;
      top: 10px;
      right: 1rem;
      width: 3rem;
      height: 3rem;
      border: 1px outset var(--DarkrayishViolet);
      background-image: url("/icon-hamburger.svg");
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }
    .toggler.active {
      background-image: url("/icon-close.svg");
    }
    nav.active {
      left: 0;
    }
  }
</style>

<script>
  document.querySelector(".toggler").addEventListener("click", () => {
    document.querySelector("nav").classList.toggle("active");
    document.querySelector(".toggler").classList.toggle("active");
  });
</script>
